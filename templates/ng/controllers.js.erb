'use strict';

/* Controllers */

<% controllers.each do |ctrl| 
  model_name = ctrl[:model_name]
  table_name = ctrl[:table_name]
  single_name = ctrl[:single_table_name]
%>

function <%= model_name %>ListCtrl($scope, <%= model_name %>) {
       $scope.<%= table_name %> = <%= model_name %>.query();
       $scope.orderProp = 'id';   /*  change to a suitable default order property */
      }

function <%= model_name %>DetailCtrl($scope, $routeParams, <%= model_name %>) {
        $scope.<%= single_name %> = <%= model_name %>.get({<%= single_name %>Id: $routeParams.<%= single_name %>Id}, function(<%= single_name %>) {
        /* do object detail specific stuff */
        /* e.g $scope.mainImageURL = <%= single_name %>.images[0] */
        });
      }
      
<% end %>
